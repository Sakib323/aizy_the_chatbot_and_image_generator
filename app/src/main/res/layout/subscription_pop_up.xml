<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_centerHorizontal="true"
    android:layout_width="320dp"
    android:layout_height="650dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#000020">



        <androidx.cardview.widget.CardView
            android:id="@+id/dismiss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            app:cardBackgroundColor="#000020"
            android:background="@color/transparent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dismiss"/>

        </androidx.cardview.widget.CardView>




    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="10dp"
            app:lottie_rawRes="@raw/premium_subscription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aizy Subscription"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>







        <EditText
            android:id="@+id/voice"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/ic_baseline_voice_chat_24"
            android:drawablePadding="20dp"
            android:hint="Ask your query anytime by voice"
            android:editable="false"
            android:textSize="15sp"
            android:textColorHint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />


        <EditText
            android:textSize="15sp"
            android:id="@+id/speech"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/ic_baseline_record_voice_over_24"
            android:drawablePadding="15dp"
            android:hint="Text to speech"
            android:editable="false"
            android:textColorHint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />

        <EditText
            android:textSize="15sp"
            android:id="@+id/ads"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/ic_baseline_campaign_24"
            android:drawablePadding="15dp"
            android:hint="No Advertisment"
            android:editable="false"
            android:textColorHint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_1"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"/>


        <TextView
            android:id="@+id/sign_up"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="Cancel anytime in google play"/>


    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/btn"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#FA016D"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buy"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>